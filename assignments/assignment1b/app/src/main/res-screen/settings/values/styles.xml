<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="None"></style>

    <style name="SettingsThemeDark" parent="Base.ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="Widget.Settings.RowWidget" parent="None">
        <item name="android:minHeight">26dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="Widget.Settings.RowTitle" parent="Widget.Settings.RowWidget">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Settings.RowValue" parent="Widget.Settings.RowWidget">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Settings.Title" parent="None">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
    </style>

    <style name="Widget.Settings.SubTitle" parent="None">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>
    </style>

    <style name="Widget.Settings.TextStyle" parent="None">
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
    </style>
    <style name="Widget.Settings.SeekBar" parent="None">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget.Settings.Header" parent="None">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/settings_header_bg</item>
    </style>
</resources>
